<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.zxingbar.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/code_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewfinder_view"
        android:layout_alignLeft="@+id/viewfinder_view"
        android:layout_alignRight="@+id/viewfinder_view"
        android:layout_marginTop="20dp"
        android:text="请对准二维码/条码到框内即可扫描"
        android:textSize="15sp"
        android:textColor="#d5d5d5"
        android:gravity="center"
        />

    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/activity_title" />

</RelativeLayout>